<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/list_item_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_item_divider_horizontal_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Product name TextView. -->
        <TextView
            android:id="@+id/name_text_view"
            style="@style/PrimaryTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Super Soft Vintage Vault Graphic T-Shirt" />

        <!-- Product price TextView. -->
        <TextView
            android:id="@+id/price_text_view"
            style="@style/SecondaryTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="$24.95" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Decrement product quantity Button. -->
        <Button
            android:id="@+id/decrement_button"
            style="@style/QuantityButtonStyle"
            android:layout_width="@dimen/quantity_button_size"
            android:layout_height="@dimen/quantity_button_size"
            android:text="@string/decrement_button_label" />

        <!-- Product quantity TextView. -->
        <TextView
            android:id="@+id/quantity_text_view"
            style="@style/SecondaryTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/quantity_text_view_horizontal_margin"
            tools:text="0" />

        <!-- Increment product quantity Button. -->
        <Button
            android:id="@+id/increment_button"
            style="@style/QuantityButtonStyle"
            android:layout_width="@dimen/quantity_button_size"
            android:layout_height="@dimen/quantity_button_size"
            android:text="@string/increment_button_label" />

    </LinearLayout>

</LinearLayout>